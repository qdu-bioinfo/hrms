#!/bin/bash
str="CXX_STD = CXX11\nPKG_CXXFLAGS = -Wno-deprecated  \$(SHLIB_OPENMP_CXXFLAGS) -O3\nPKG_LIBS = \$(SHLIB_OPENMP_CXXFLAGS) \$(LAPACK_LIBS) \$(BLAS_LIBS) \$(FLIBS) -Wno-deprecated"

home=~
if [ ! -e "$home/.R" ]; then
  mkdir ~/.R; touch ~/.R/Makevars
  echo -e $str > ~/.R/Makevars
elif [ ! -e "$home/.R/Makevars" ]; then
  touch ~/.R/Makevars
  echo -e $str > ~/.R/Makevars
else
  mv ~/.R/Makevars ~/.R/Makevars.bak_CustomConfig
  echo -e $str > ~/.R/Makevars
fi


